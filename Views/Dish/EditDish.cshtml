@{
    ViewData["Title"] = "Edit Dish";
}
@model Dish

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Dish</title>
</head>
<body>
    <div>
        <h1>Editing @Model.Name</h1>
        <form asp-action="UpdateDish" asp-controller="Dish" asp-route-dishId="@Model.DishId" method="post">
            <div>
                <label asp-for="Name">Dish Name</label>
                <input type="text" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Chef">Chef</label>
                <input type="text" placeholder=" Soma Yukihira" asp-for="Chef">
                <span asp-validation-for="Chef" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Tastiness">Tastiness</label>
                <select name="Tastiness" id="" asp-for="Tastiness">
                    <option value="" hidden> Choose how tasty it is</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span asp-validation-for="Tastiness" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Calories">Calories</label>
                <input type="number" asp-for="Calories">
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Description">Description</label>
                <input type="text" asp-for="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit">Submit</button>
        </form>
    </div>
</body>
</html>